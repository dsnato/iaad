[sqlfluff]
dialect = mysql
max_line_length = 120
# Ignora regras problemáticas para projetos legados
exclude_rules = LT01, LT02, CP02, AL01

[sqlfluff:indentation]
indent_unit = space
tab_space_size = 4

[sqlfluff:rules:capitalisation.keywords]
capitalisation_policy = upper

[sqlfluff:rules:capitalisation.identifiers]
# Permite qualquer estilo de capitalização
capitalisation_policy = consistent
